<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef>
    <defName>Make_ComponentDarkEldar</defName>
    <label>make dark eldar component</label>
    <description>Make a dark eldar component.</description>
    <jobString>Making dark eldar component.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_Machining</soundWorking>
    <workAmount>5000</workAmount>
    <unfinishedThingDef>UnfinishedComponent</unfinishedThingDef>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>OGDE_Wraithbone</li>
          </thingDefs>
        </filter>
        <count>4</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>OGDE_Wraithbone</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <OGDE_Component>1</OGDE_Component>
    </products>
		<skillRequirements>
			<Crafting>8</Crafting>
		</skillRequirements>
    <workSkill>Crafting</workSkill>
	<recipeUsers>
		<li>OGDE_TableMachining</li>
	</recipeUsers>
  </RecipeDef>

