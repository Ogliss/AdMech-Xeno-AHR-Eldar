<?xml version="1.0" encoding="utf-8" ?>
<Defs>
    <!-- ========================= Eldar ========================== -->
    <!-- ========================= Eldar - Clothes Base - Apparel Base ========================== -->
	<ThingDef Name="OG_Eldar_Apparel_Base" ParentName="OG_Apparel_Base" Abstract="True">
		<apparel>
			<tags>
				<li>EldarApparel</li>
			</tags>
		</apparel>
		<thingCategories>
			<li>OGESub</li>
		</thingCategories>
	</ThingDef>
	
    <!-- ========================= Eldar - Clothes Base - Apparel Makable Base ========================== -->
	<ThingDef Name="OG_Eldar_Apparel_Makeable" ParentName="OG_Eldar_Apparel_Base" Abstract="True">
		<recipeMaker>
			<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
			<workSkill>Crafting</workSkill>
			<effectWorking>Tailor</effectWorking>
			<soundWorking>Recipe_Tailor</soundWorking>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
			</recipeUsers>
			<unfinishedThingDef>UnfinishedApparel</unfinishedThingDef>
			<researchPrerequisites>
				<li>OG_Eldar_Tech_Base_T1</li>
			</researchPrerequisites>
		</recipeMaker>
	</ThingDef>
		
    <!-- ========================= Eldar - Clothes - Apparel Makable ========================== -->
	<ThingDef Name="OG_Eldar_Apparel" ParentName="OG_Eldar_Apparel_Makeable" Abstract="True">
		<apparel>
			<tags>
				<li>EldarClothing</li>
			</tags>
		</apparel>
		<thingCategories>
			<li>OGEApparel</li>
		</thingCategories>
	</ThingDef>
	
	<!-- ========================= Eldar - Headgear - Hat Makable ========================== -->
	<ThingDef Name="OG_Eldar_Apparel_Headgear" ParentName="OG_Eldar_Apparel_Makeable" Abstract="True">
		<apparel>
			<tags>
				<li>EldarHat</li>
			</tags>
		</apparel>
		<thingCategories>
			<li>OGEHeadgear</li>
		</thingCategories>
    <statBases>
      <Mass>0.15</Mass>
    </statBases>
	</ThingDef>
	
    <!-- ========================= Eldar - Clothes Base - Apparel Base ========================== -->
